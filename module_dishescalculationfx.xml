<?xml version="1.0" encoding="UTF-8"?>
<project name="module_dishescalculationfx" default="compile.module.dishescalculationfx">
  <dirname property="module.dishescalculationfx.basedir" file="${ant.file.module_dishescalculationfx}"/>
  
  <property name="module.jdk.home.dishescalculationfx" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.dishescalculationfx" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.dishescalculationfx" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.dishescalculationfx" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="dishescalculationfx.output.dir" value="${module.dishescalculationfx.basedir}/out/production/DishesCalculationFX"/>
  <property name="dishescalculationfx.testoutput.dir" value="${module.dishescalculationfx.basedir}/out/test/DishesCalculationFX"/>
  
  <path id="dishescalculationfx.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="dishescalculationfx.module.production.classpath">
    <path refid="${module.jdk.classpath.dishescalculationfx}"/>
    <path refid="library.mysql-connector-java-5.1.46.classpath"/>
  </path>
  
  <path id="dishescalculationfx.runtime.production.module.classpath">
    <pathelement location="${dishescalculationfx.output.dir}"/>
    <path refid="library.mysql-connector-java-5.1.46.classpath"/>
  </path>
  
  <path id="dishescalculationfx.module.classpath">
    <path refid="${module.jdk.classpath.dishescalculationfx}"/>
    <pathelement location="${dishescalculationfx.output.dir}"/>
    <path refid="library.mysql-connector-java-5.1.46.classpath"/>
  </path>
  
  <path id="dishescalculationfx.runtime.module.classpath">
    <pathelement location="${dishescalculationfx.testoutput.dir}"/>
    <pathelement location="${dishescalculationfx.output.dir}"/>
    <path refid="library.mysql-connector-java-5.1.46.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.dishescalculationfx">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.dishescalculationfx">
    <patternset refid="excluded.from.module.dishescalculationfx"/>
  </patternset>
  
  <path id="dishescalculationfx.module.sourcepath">
    <dirset dir="${module.dishescalculationfx.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.dishescalculationfx" depends="compile.module.dishescalculationfx.production,compile.module.dishescalculationfx.tests" description="Compile module DishesCalculationFX"/>
  
  <target name="compile.module.dishescalculationfx.production" depends="register.custom.compilers" description="Compile module DishesCalculationFX; production classes">
    <mkdir dir="${dishescalculationfx.output.dir}"/>
    <javac2 destdir="${dishescalculationfx.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.dishescalculationfx}/javac">
      <compilerarg line="${compiler.args.dishescalculationfx}"/>
      <bootclasspath refid="dishescalculationfx.module.bootclasspath"/>
      <classpath refid="dishescalculationfx.module.production.classpath"/>
      <src refid="dishescalculationfx.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.dishescalculationfx"/>
    </javac2>
    
    <copy todir="${dishescalculationfx.output.dir}">
      <fileset dir="${module.dishescalculationfx.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.dishescalculationfx.tests" depends="register.custom.compilers,compile.module.dishescalculationfx.production" description="compile module DishesCalculationFX; test classes" unless="skip.tests"/>
  
  <target name="clean.module.dishescalculationfx" description="cleanup module">
    <delete dir="${dishescalculationfx.output.dir}"/>
    <delete dir="${dishescalculationfx.testoutput.dir}"/>
  </target>
</project>