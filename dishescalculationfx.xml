<?xml version="1.0" encoding="UTF-8"?>
<project name="dishescalculationfx" default="all">
  

  <property file="dishescalculationfx.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.ear"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.mysql-connector-java-5.1.46.classpath">
    <pathelement location="D:/libs/mysql-connector-java-5.1.46/mysql-connector-java-5.1.46-bin.jar"/>
    <pathelement location="D:/libs/mysql-connector-java-5.1.46/mysql-connector-java-5.1.46.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module DishesCalculationFX -->
  
  <dirname property="module.dishescalculationfx.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.dishescalculationfx" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.dishescalculationfx" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.dishescalculationfx" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.dishescalculationfx" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="dishescalculationfx.output.dir" value="${module.dishescalculationfx.basedir}/out/production/DishesCalculationFX"/>
  <property name="dishescalculationfx.testoutput.dir" value="${module.dishescalculationfx.basedir}/out/test/DishesCalculationFX"/>
  
  <path id="dishescalculationfx.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="dishescalculationfx.module.production.classpath">
    <path refid="${module.jdk.classpath.dishescalculationfx}"/>
    <path refid="library.mysql-connector-java-5.1.46.classpath"/>
  </path>
  
  <path id="dishescalculationfx.runtime.production.module.classpath">
    <pathelement location="${dishescalculationfx.output.dir}"/>
    <path refid="library.mysql-connector-java-5.1.46.classpath"/>
  </path>
  
  <path id="dishescalculationfx.module.classpath">
    <path refid="${module.jdk.classpath.dishescalculationfx}"/>
    <pathelement location="${dishescalculationfx.output.dir}"/>
    <path refid="library.mysql-connector-java-5.1.46.classpath"/>
  </path>
  
  <path id="dishescalculationfx.runtime.module.classpath">
    <pathelement location="${dishescalculationfx.testoutput.dir}"/>
    <pathelement location="${dishescalculationfx.output.dir}"/>
    <path refid="library.mysql-connector-java-5.1.46.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.dishescalculationfx">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.dishescalculationfx">
    <patternset refid="excluded.from.module.dishescalculationfx"/>
  </patternset>
  
  <path id="dishescalculationfx.module.sourcepath">
    <dirset dir="${module.dishescalculationfx.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.dishescalculationfx" depends="compile.module.dishescalculationfx.production,compile.module.dishescalculationfx.tests" description="Compile module DishesCalculationFX"/>
  
  <target name="compile.module.dishescalculationfx.production" depends="register.custom.compilers" description="Compile module DishesCalculationFX; production classes">
    <mkdir dir="${dishescalculationfx.output.dir}"/>
    <javac2 destdir="${dishescalculationfx.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
            fork="true" executable="${module.jdk.bin.dishescalculationfx}/javac">
      <compilerarg line="${compiler.args.dishescalculationfx}"/>
      <bootclasspath refid="dishescalculationfx.module.bootclasspath"/>
      <classpath refid="dishescalculationfx.module.production.classpath"/>
      <src refid="dishescalculationfx.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.dishescalculationfx"/>
    </javac2>
    
    <copy todir="${dishescalculationfx.output.dir}">
      <fileset dir="${module.dishescalculationfx.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.dishescalculationfx.tests" depends="register.custom.compilers,compile.module.dishescalculationfx.production" description="compile module DishesCalculationFX; test classes" unless="skip.tests"/>
  
  <target name="clean.module.dishescalculationfx" description="cleanup module">
    <delete dir="${dishescalculationfx.output.dir}"/>
    <delete dir="${dishescalculationfx.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.dishescalculationfx, clean.artifact.dishescalculationfx" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.dishescalculationfx" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.dishescalculationfx" value="${basedir}/out/artifacts/DishesCalculationFX"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.DishesCalculationFX" value="${artifacts.temp.dir}/DishesCalculationFX.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.1.8}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.dishescalculationfx" description="clean DishesCalculationFX artifact output">
    <delete dir="${artifact.output.dishescalculationfx}"/>
  </target>
  
  <target name="artifact.dishescalculationfx" depends="init.artifacts, compile.module.dishescalculationfx" description="Build &#39;DishesCalculationFX&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.dishescalculationfx}"/>
    <copy todir="${artifact.temp.output.DishesCalculationFX}">
      <fileset dir="${dishescalculationfx.output.dir}"/>
    </copy>
    <fx:fileset id="all_but_DishesCalculationFX" dir="${artifact.temp.output.DishesCalculationFX}" includes="**/*.jar">
      <exclude name="DishesCalculationFX.jar"/>
    </fx:fileset>
    <fx:fileset id="all_DishesCalculationFX" dir="${artifact.temp.output.DishesCalculationFX}" includes="**/*.jar"/>
    <fx:application id="DishesCalculationFX_id" name="DishesCalculationFX" mainClass="afokeeva.java.Main" version="1.0"/>
    <fx:jar destfile="${artifact.temp.output.DishesCalculationFX}/DishesCalculationFX.jar">
      <fx:application refid="DishesCalculationFX_id"/>
      <fileset dir="${artifact.temp.output.DishesCalculationFX}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_DishesCalculationFX"/>
      </fx:resources>
      <manifest>
        <attribute name="Implementation-Title" value="DishesCalculation"/>
        <attribute name="Implementation-Version" value="1.0"/>
        <attribute name="Implementation-Vendor" value="afokeeva"/>
      </manifest>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.DishesCalculationFX}/deploy" outfile="DishesCalculationFX" nativeBundles="all">
      <fx:application refid="DishesCalculationFX_id"/>
      <fx:info title="DishesCalculation" vendor="afokeeva"/>
      <fx:resources>
        <fx:fileset refid="all_DishesCalculationFX"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.dishescalculationfx}">
      <fileset dir="${artifact.temp.output.DishesCalculationFX}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.DishesCalculationFX}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.dishescalculationfx" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>